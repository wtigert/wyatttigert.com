---
import "minireset.css";
import "../css/style.css";

const { content } = Astro.props;
const copyright = `\u{00A9} ${new Date().getFullYear()} Wyatt Tigert`;
---

<html lang="en">
  <head>
    <!-- General -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <!-- Page Info -->
    <title>{content.title}</title>
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="description" content={content.description} />

    <!-- Social -->
    <meta property="og:title" content={content.title} />
    <meta property="og:description" content={content.description} />
    <meta property="og:type" content="website" />
    <meta property="twitter:card" content="summary" />
    <meta property="twitter:creator" content="Wyatt Tigert" />
    <meta property="twitter:title" content={content.title} />
    <meta property="twitter:description" content={content.description} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;700;900&display=swap"
      rel="stylesheet"
      defer
    />
  </head>

  <body>
    <main>
      <section id="about">
        <slot />
      </section>
      <footer>
        {copyright} [ <a href="https://read.cv/wat">CV</a> / <a
          href="mailto:inquiries@wyatttigert.com">inquiries@wyatttigert.com</a
        > ]
      </footer>
    </main>
  </body>
</html>
